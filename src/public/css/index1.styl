
#index
  height 100%
  background url("../images/bg.jpg")
  color white
  background-size 100% 100%
  .text-center
    text-align center
    padding-top 15px
  form
    width 18rem
    margin 0 auto
    .form-group
      margin 13px 0
      text-align center
      height 2rem
      label
        width 3.5rem
        display inline-block
        text-align right
        font-size 14px
      .form-control
        height 1.5rem
        padding-left 5px
        border-radius 4px
        border 1px solid #d3d3d3
        width 13.5rem
        float right
        color #000
        font-size 14px
      .btn
        height 1.7rem
        line-height 1.7rem
        width 4rem
        border-radius 4px
        background-color #169ad4
        border 1px solid #169ad4
        color #ffffff
      .btn + .btn
        margin-left 10px
  .text-info
    text-align center
    padding-top 15px
  table
    border 1px solid #ddd
    margin 10px auto
  table
    border-right none
    font-size 14px
    width 90%
    thead
      tr
        th
          padding 5px 0
          width 4.5rem
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
          font-size 14px
    tbody
      tr
        td
          width 4.5rem
          padding 5px 0
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
          .btn
            padding 3px 5px
            border-radius 3px
            background-color #169ad4
            border 1px solid #169ad4
            color #ffffff
          .btn-sm
            margin-left 10px
        .last
          border-bottom none
  .text-muted
    border-bottom none